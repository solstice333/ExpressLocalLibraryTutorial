extends layout

block content
   h1 #{title}: #{book.title}

   if bookinstances.length
      p.alert.alert-warning(role='alert') #[strong Delete the following copies before attempting to delete this book.]

      div(style='margin-left:20px;margin-top:20px')
         h4 Copies

         each bookInstance in bookinstances
            include dumpBookinstance.pug
   else
      p.alert.alert-danger(role='alert') #[strong Do you really want to delete this Book?]

      form(method='POST', action='')
         div.form-group
            input#bookId.form-control(type='hidden', name='bookId', required='true', value=book._id)

         button.btn.btn-danger(type='submit') Delete

   include validationErrors.pug
