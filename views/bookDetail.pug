extends layout

block content
   h1 #{title}: #{book.title}

   include dumpBook.pug

   div(style='margin-left:20px;margin-top:20px')
      h4 Copies

      each bookInstance in bookInstances
         include dumpBookinstanceListItem.pug
      else
         p There are no copies of this book in the library

   br
   br
   div.btn-group(role='group', aria-label='delete and update controls')
      a.btn.btn-warning.mr-2(href=`${book.url}/delete`) Delete
      a.btn.btn-warning.mr-2(href=`${book.url}/update`) Update
