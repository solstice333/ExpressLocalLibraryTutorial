extends layout

block content
   h1 #{title}: #{genre.name}

   if genreBooks.length
      p.alert.alert-warning(role='alert') #[strong Delete the following books before attempting to delete this genre]

      div(style='margin-left:20px;margin-top:20px')
         h4 Books

         dl
            each book in genreBooks
               include dumpBookListItem.pug
   else
      p.alert-alert-danger(role='alert') #[strong Do you really want to delete this genre?]

      form(method='POST', action='')
         div.form-group
            input#genreId.form-control(type='hidden', name='genreId', value=genre._id, required=true)

         button.btn.btn-danger(type='submit') Delete

   include validationErrors.pug
