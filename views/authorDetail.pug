extends layout

block content
   h1 Author: #{author.name}
   p (#{author.lifespan})
   
   div(style="margin-top:20px;margin-left:20px;")
      h4 Books

      dl
      each book in books
         dt
            a(href=book.url) #{book.title}
         dd #{book.summary}
      else
         p This author does not have any books

   br
   br
   div.btn-group(role='group', aria-label='delete and update controls')
      a.btn.btn-warning.mr-2(href=`${author.url}/delete`) Delete
      a.btn.btn-warning.mr-2(href=`${author.url}/update`) Update

