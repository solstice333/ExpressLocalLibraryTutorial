extends layout

block content
   h1 #{title}

   form(method='POST', action='')
      div.form-group
         label(for='first_name') First name 
         input#first_name.form-control(type='text', placeholder='enter first name', name='first_name', required='true', value=(author === undefined ? '' : author.first_name))

         label(for='last_name') Last name 
         input#last_name.form-control(type='text', placeholder='enter last name', name='last_name', required='true', value=(author === undefined ? '' : author.family_name))

      div.form-group
         label(for='dob') Date of birth
         input#dob.form-control(type='date', placeholder='mm/dd/yyyy', name='date_of_birth', value=(author === undefined ? '' : author.date_of_birth === null ? '' : author.date_of_birth_iso8601))

         label(for='dod') Date of death
         input#dod.form-control(type='date', placeholder='mm/dd/yyyy', name='date_of_death', value=(author === undefined ? '' : author.date_of_death === null ? '' : author.date_of_death_iso8601))

      input#tzo.form-control(type='hidden', name='tzoffset', value=new Date().getTimezoneOffset())
         
      button.btn.btn-primary(type="submit") Submit

   include validationErrors.pug      
